{% extends 'base.html.twig' %}

{% block title %}- Nombre user{% endblock %}

{% block main %}
<main>
        <div class="container">
            <div class="row pt-3 border-bottom-verde">
                <div class="col-12 text-verde">
                    <h3 class="fw-bold">DETALLES DEL USUARIO</h3>
                </div>
            </div>
            <div class="row pt-3 bg-white pb-4 shadow-lg">
                <div class="col-4 text-center">
                    <img class="w-100" src="/img/user.png" alt="">
                    <a class="mt-2 btn btn-verde rounded-0" href="">Cambiar imagen de perfil</a>
                </div>
                <div class="col-8 align-self-center">
                    <form action="">
                        <label for="name">Nombre :</label>
                        <input id="name" class="form-control border-verde mb-2" type="text">
                        <label for="surname">Apellidos :</label>
                        <input id="surname" class="form-control border-verde mb-2" type="text">
                        <label for="mail">Correo :</label>
                        <input id="mail" class="form-control border-verde mb-2" type="text">
                        <label for="name">Teléfono :</label>
                        <input id="name" class="form-control border-verde mb-2" type="tel">
                        <label for="pass">Contraseña :</label>
                        <input id="pass" class="form-control border-verde mb-2" type="text">
                        <label for="rPass">Repetir Contraseña :</label>
                        <input id="rPass" class="form-control border-verde mb-2" type="text">
                        <div class="text-end pt-3"><button type="submit" class="btn btn-verde rounded-0">Editar</button></div>
                    </form>
                </div>
            </div>
        </div>
    </main>
{% endblock %}