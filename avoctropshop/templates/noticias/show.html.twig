{% extends 'sideandtopbar.html.twig' %}

{% block title %}Noticias{% endblock %}

{% block row %}
<div class="row pt-3">
    <div class="col-1"></div>
    <div class="col-10 bg-white shadow p-5">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ noticia.id }}</td>
                </tr>
                <tr>
                    <th>Titulo</th>
                    <td>{{ noticia.titulo }}</td>
                </tr>
                <tr>
                    <th>Texto</th>
                    <td>{{ noticia.texto }}</td>
                </tr>
                <tr>
                    <th>Img</th>
                    <td>{{ noticia.img }}</td>
                </tr>
                <tr>
                    <th>Relevante</th>
                    <td>{{ noticia.relevante ? 'SI' : 'NO' }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex">
            <a class="btn btn-success me-2" href="{{ path('noticias') }}">Volver a la lista</a>
            <a class="btn btn-warning me-2" href="{{ path('app_noticias_edit', {'id': noticia.id}) }}"><i class="bi bi-pencil-square"></i></a>
            {{ include('noticias/_delete_form.html.twig') }}
        </div>
    </div>
    <div class="col-1"></div>
</div>
{% endblock %}
