                        <div class="col-1"></div>
                        <div class="col-10 bg-white shadow">
                            <table class="table table-striped table-hover text-center">
                                <thead>
                                    <tr>
                                        <th>TITULO</th>
                                        <th>NOTICIA</th>
                                        <th>Â¿RELEVANTE?</th>
                                        <th>ACCIONES</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for noticia in noticias %}
