{% extends 'sideandtopbar.html.twig' %}

{% block title %}Recetas{% endblock %}

{% block gestion %}RECETAS (MOSTRAR){% endblock %}

{% block row %}
{% set ingredientes = receta.ingredientes|split(',') %}
{% set pasos = receta.pasos|split(',') %}
<div class="row pt-3">
    <div class="col-1"></div>
    <div class="col-10 bg-white shadow p-5">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ receta.id }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ receta.nombre }}</td>
                </tr>
                <tr>
                    <th>Ingredientes</th>
                    <td>
                        <ul>
                            {% for ingrediente in ingredientes %}
                                <li>{{ingrediente}}</li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
                <tr>
                    <th>Pasos</th>
                    <td>
                        <ol>
                            {% for paso in pasos %}
                                <li>{{paso}}</li>
                            {% endfor %}
                        </ol>
                    </td>
                </tr>
                <tr>
                    <th>Img</th>
                    <td>{{ receta.img }}</td>
                </tr>
                <tr>
                    <th>Top</th>
                    <td>{{ receta.top ? 'SI' : 'NO' }}</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex">
            <a class="btn btn-success me-2" href="{{ path('recetas') }}">Volver a la lista</a>
            <a class="btn btn-warning me-2" href="{{ path('app_recetas_edit', {'id': receta.id}) }}"><i class="bi bi-pencil-square"></i></a>
            {{ include('recetas/_delete_form.html.twig') }}
        </div>
    </div>
    <div class="col-1"></div>
</div>
{% endblock %}
