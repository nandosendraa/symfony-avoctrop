{% extends 'bobase.html.twig' %}

{% block title %} Inicio{% endblock %}
{% block js %}
    <script src="js/form.js"></script>
{% endblock %}

{% block main %}
    <main>
        <div class="container-fluid g-0">
            <div class="row">
                <div class="col-2 p-0">
                    <div class="border h-100 text-verde ps-4 pe-4 bg-white shadow">
                        <div class="user pt-4 text-center border-bottom-verde pb-1">
                            <img class="w-100" src="/img/user.png" alt="user">
                            <h4 class="pt-3 fw-bold">NOMBRE APELLIDO</h4>
                        </div>
                        <a href="{{ path('panel') }}" class="text-decoration-none text-verde"><h4 class="pt-4"><i class="bi bi-house-door-fill"></i> INICIO</h4></a>
                        <a href="{{ path('productos') }}" class="text-decoration-none text-verde"><h4 class="pt-3"><i class="bi bi-diagram-3-fill"></i> PRODUCTOS</h4></a>
                        <a href="{{ path('pedidos') }}" class="text-decoration-none text-verde"><h4 class="pt-3"><i class="bi bi-bag-check-fill"></i> PEDIDOS ONLINE</h4></a>
                        <a href="{{ path('usuarios') }}" class="text-decoration-none text-verde"><h4 class="pt-3"><i class="bi bi-person-fill"></i> USUARIOS</h4></a>
                        <a href="{{ path('recetas') }}" class="text-decoration-none text-verde"><h4 class="pt-3"><i class="bi bi-journal-text"></i> RECETAS</h4></a>
                        <a href="{{ path('noticias') }}" class="text-decoration-none text-verde"><h4 class="pt-3"><i class="bi bi-newspaper"></i> NOTICIAS</h4></a>
                        <a href="{{ path('galeria') }}" class="text-decoration-none text-verde"><h4 class="pt-3 pb-3"><i class="bi bi-images"></i> GALERIA</h4></a>
                    </div>
                </div>
                <div class="col-10">
                    <div class="row bg-white shadow">
                        <div class="col-10">
                            <h2 class="text-center fw-bold pt-3 pb-3">GESTION DE {% block gestion %}{% endblock %}</h2>
                        </div>
                        <div class="col-2 align-self-center">{% block nuevo %}{% endblock %}</div>
                    </div>
                    {% block row %}{% endblock %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}