<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/style.css">
    <title>Avoctrop {% block title %}{% endblock %}</title>
</head>
<body>
    {% set ingredientes = receta[0].ingredientes|split('|') %}
    {% set pasos = receta[0].pasos|split('|') %}
    {% set masPasos = false %}
    {% set masIngredientes = false %}
    {% if receta[0].masIngredientes %}
        {% set masIngredientes = receta[0].masIngredientes|split('|') %}
    {% endif %}
    {% if receta[0].masPasos %}
        {% set masPasos = receta[0].masPasos|split('|') %}
    {% endif %}
    <div class="container">
        <div class="row border-bottom border-2 border-dark pb-2">
            <div class="col-2 d-flex align-items-center justify-content-center">
                <img class="w-100" src="/img/(Logo) Sin fondo.png" alt="logo">
            </div>
            <div class="col-8 d-flex align-items-center justify-content-center">
                <h1 class="fw-bold">AVOCTROP</h1>
            </div>
            <div class="col-2">
                <p class="m-0">C/Partida de mostalla 101, Pego (Alicante)</p>
                <p class="m-0">Tel: 635149330</p>
                <p class="m-0">Mail: info@avoctrop.com</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h2 class="text-center pt-2">{{receta[0].nombre}}</h2>
            </div>
        </div>
        <div class="row pt-2">
            <div class="col-6">
                <img class="w-100" src="/uploads/imgRecetas/{{receta[0].img}}" alt="{{receta[0].nombre}}">
            </div>
            <div class="col-6 d-flex align-items-center">
                <div>
                    <ul class="ps-5 pt-2">
                        {% for ingrediente in ingredientes %}
                            <li class="text-start">{{ingrediente}}</li>
                        {% endfor %}
                        {% if masIngredientes %}
                        {% for masIngrediente in masIngredientes %}
                            <li class="text-start">{{masIngrediente}}</li>
                        {% endfor %}
                        {% endif %}
                    </ul>
                    <ol class="ps-5 pt-2">
                        {% for paso in pasos %}
                            <li class="text-start">{{paso}}</li>
                        {% endfor %}
                        {% if masPasos %}
                            {% for masPaso in masPasos %}
                                <li class="text-start">{{masPaso}}</li>
                            {% endfor %}
                        {% endif %}
                    </ol>
                </div>
            </div>
        </div>
    </div>
</body>
</html>